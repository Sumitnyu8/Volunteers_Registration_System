<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Registered Volunteers</h1>
    <a href="/volunteers/register">Register New Volunteer</a>
    <ul>
        <% volunteers.forEach(volunteer => { %>
            <li>
                <strong><%= volunteer.name %></strong> - <%= volunteer.email %> - <%= volunteer.phone %> - <%= volunteer.skills %>
                <a href="/volunteers/edit/<%= volunteer._id %>">Edit</a>
                <form action="/volunteers/delete/<%= volunteer._id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
